{{!
    @template core/chooser_item

    Chooser item.

    Example context (json):
    {
        "id": "1",
        "paramname": "param",
        "value": "1",
        "label": "item one",
        "description": "description one"
    }
}}
<div class="option">
    <label for="item_{{id}}">
        <input type="radio" name="{{paramname}}" id="item_{{id}}" value="{{value}}">
        <span class="modicon">
            {{#icon}}
                {{>core/pix_icon}}
            {{/icon}}
        </span>
        <span class="typename">{{label}}</span>
        <span class="typesummary">
            {{{description}}}
        </span>
    </label>
</div>
