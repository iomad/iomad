{{!
    @template core_form/element-password

    Password form element template.

    Example context (json):
    {
        "element": {
            "name": "test",
            "id": "test0",
            "size": null,
            "error": null,
            "value": "Sample text",
            "frozen": false,
            "iderror": "test0_error",
            "attributes": ""
        }
    }
}}
{{< core_form/element-template }}
    {{$element}}
        {{^element.frozen}}
        <input type="password"
                class="form-control {{#error}}is-invalid{{/error}}"
                name="{{element.name}}"
                id="{{element.id}}"
                value="{{element.value}}"
                {{#element.size}}size="{{element.size}}"{{/element.size}}
                {{#error}}
                    autofocus aria-describedby="{{element.iderror}}"
                {{/error}} {{{element.attributes}}}>
        {{/element.frozen}}
    {{/element}}
{{/ core_form/element-template }}
