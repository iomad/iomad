{{!
    Setting configselect with optgroup support.
}}
<div class="form-select defaultsnext">
    <select id="{{id}}" name="{{name}}" class="custom-select">
        {{#options}}
            <option value="{{value}}" {{#selected}}selected{{/selected}}>{{name}}</option>
        {{/options}}
        {{#optgroups}}
            <optgroup label="{{label}}">
                {{#options}}
                    <option value="{{value}}" {{#selected}}selected{{/selected}}>{{name}}</option>
                {{/options}}
            </optgroup>
        {{/optgroups}}
    </select>
</div>


