{{!
    @template theme_iomadboost/flat_navigation

    Display the flat navigation for the iomadboost theme

    Classes required for JS:
    * none

    Data attributes required for JS:
    * none

    Context variables required for this template:
    * flatnavigation - array of flat_navigation_nodes
      * showdivider - boolean
      * action - string
      * isactive - boolean
      * get_indent - integer
      * is_section - boolean
      * text - HTML

    Example context (json):
    {
        "flatnavigation" : [
            {
                "showdivider": false,
                "action": "#",
                "isactive": true,
                "get_indent": 1,
                "is_section": false,
                "text": "First"
            },{
                "showdivider": true,
                "action": "#",
                "isactive": false,
                "get_indent": 0,
                "is_section": true,
                "text": "Last &amp; Second"
            }
        ]
    }
}}

<div class="container">
    <div class="row">
        <div class="col-md-4 nav-drawer-left {{#nav_logo}}has-logo{{/nav_logo}}">
            {{#nav_logo}}
                <figure class="nav-logo">
                    <img src="{{nav_logo}}" alt="Arm Logo">
                </figure>
            {{/nav_logo}}
            {{#flatnavigation}}
                {{#action}}
                <a class="list-group-item list-group-item-action {{#isSubItem}}subitem{{/isSubItem}} {{#isactive}}font-weight-bold{{/isactive}}" href="{{{action}}}" data-key="{{key}}" data-text="{{text}}">
                    {{#showfaicon}}
                        <i class="fas fa-{{faicon}}"></i>
                    {{/showfaicon}}
                    <div class="m-l-{{get_indent}}">
                        <span>{{{text}}}</span>
                    </div>
                </a>
                {{/action}}
                {{^action}}
                <div class="list-group-item" data-key="{{key}}" data-count="{{count}} 1">
                    {{#showfaicon}}
                        <i class="fas fa-{{faicon}}"></i>
                    {{/showfaicon}}
                    <div class="m-l-{{get_indent}}">
                        {{#is_section}}
                            {{#pix}}i/folder{{/pix}}
                        {{/is_section}}
                        {{{text}}}
                    </div>
                </div>
                {{/action}}
            {{/flatnavigation}}
        </div>
        <div class="col-md-8 nav-drawer-right">
            <div class="row">
                {{#flatnavigation}}
                    {{#action}}
                        <a class="list-group-item list-group-item-action {{#isSubItem}}subitem{{/isSubItem}} {{#isactive}}font-weight-bold{{/isactive}}" href="{{{action}}}" data-key="{{key}}" data-text="{{text}}">
                            {{#showfaicon}}
                                <i class="fas fa-{{faicon}}"></i>
                            {{/showfaicon}}
                            <div class="m-l-{{get_indent}}">
                                <span>{{{text}}}</span>
                            </div>
                        </a>
                        {{/action}}
                        {{^action}}
                        <div class="list-group-item" data-key="{{key}}" data-count="{{count}} 1">
                            {{#showfaicon}}
                                <i class="fas fa-{{faicon}}"></i>
                            {{/showfaicon}}
                            <div class="m-l-{{get_indent}}">
                                {{#is_section}}
                                    {{#pix}}i/folder{{/pix}}
                                {{/is_section}}
                                {{{text}}}
                            </div>
                        </div>
                    {{/action}}
                {{/flatnavigation}}
            </div>
        </div>
    </div>
</div>