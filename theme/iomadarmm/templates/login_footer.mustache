{{!
    Page footer.
}}
<footer id="page-footer" class="htm-footer" style="{{#footer}}background-color:{{bgcolor}};{{/footer}}">
    <div class="htm-footer__top">
        <div class="container">
            <ul class="social-links">
                {{#smurls}}
                    {{#profiles}}
                        {{> theme_iomadarmm/sm_icon }}
                    {{/profiles}}
                {{/smurls}}
            </ul>    
        </div>
    </div>
    <div class="htm-footer__bottom">
        <div class="container">
            <div class="col-xs-12">
                {{#footer}}
                    {{{text}}}
                {{/footer}}
            </div>
            <div class="footnote">
                {{#footer}}
                    {{{footnote}}}
                {{/footer}}
            </div>
            {{# output.page_doc_link }}
                <p class="helplink">{{{ output.page_doc_link }}}</p>
            {{/ output.page_doc_link }}
            {{{ output.standard_footer_html }}}
            {{{ output.standard_end_of_body_html }}}
        </div>
    </div>
</footer>