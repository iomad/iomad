<ul class="nav nav-tabs" role="tablist">
    {{# tabs }}
        <li class="nav-item">
            <a 
                id="{{ category }}-tab"
                data-toggle="tab"
                role="tab"
                class="nav-link {{# selected }}show active{{/ selected }}"
                href="#{{ category }}"
                aria-controls="{{ category }}"
                aria-selected="{{# selected }}true{{/ selected }}{{^ selected }}false{{/selected}}"
                ><i class="fa {{ icon }}"></i> {{ label }}</a>
        </li>
    {{/ tabs }}
</ul>