{{!
    @template block_mycourses/main

    This template renders the main content area for the mycourses block.

    Example context (json):
    {}
}}

<div id="block-mycourses-{{uniqid}}" class="block-mycourses" data-region="mycourses">
    <ul id="block-mycourses-view-choices-{{uniqid}}" class="nav nav-tabs" role="tablist">
        <li class="nav-item">
            <a class="nav-link {{#viewingavailable}}active{{/viewingavailable}}" href="#mycourses_available_view" role="tab" data-toggle="tab" data-tabname="available">
                {{#str}} availableheader, block_mycourses {{/str}}
            </a>
        </li>
        <li class="nav-item">
            <a class="nav-link {{#viewinginprogress}}active{{/viewinginprogress}}" href="#mycourses_inprogress_view" role="tab" data-toggle="tab" data-tabname="inprogress">
                {{#str}} inprogressheader, block_mycourses {{/str}}
            </a>
        </li>
        <li class="nav-item">
            <a class="nav-link {{#viewingcompleted}}active{{/viewingcompleted}}" href="#mycourses_completed_view" role="tab" data-toggle="tab" data-tabname="completed">
                {{#str}} completedheader, block_mycourses {{/str}}
            </a>
        </li>
    </ul>
    <div class="tab-content content-centred">
        <div role="tabpanel" class="tab-pane fade {{#viewingavailable}}in active{{/viewingavailable}}" id="mycourses_available_view">
            {{> block_mycourses/available-view }}
        </div>
        <div role="tabpanel" class="tab-pane fade {{#viewinginprogress}}in active{{/viewinginprogress}}" id="mycourses_inprogress_view">
            {{> block_mycourses/inprogress-view }}
        </div>
        <div role="tabpanel" class="tab-pane fade {{#viewingcompleted}}in active{{/viewingcompleted}}" id="mycourses_completed_view">
            {{> block_mycourses/completed-view }}
        </div>
    </div>
</div>
{{#js}}
require(['jquery', 'block_mycourses/tab_preferences'], function($, TabPreferences) {
    var root = $('#block-mycourses-view-choices-{{uniqid}}');
    TabPreferences.registerEventListeners(root);
});
{{/js}}
